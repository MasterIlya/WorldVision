@model PaginationReviewModel
@{
    ViewData["Title"] = "UserReviews";
    Layout = "_Layout";

}
<body>
    <div class="container">
        <div>
            <a asp-action="CreateReview" asp-controller="Reviews" class="btn btn-primary">Create Review</a>
        </div>
        <table class="table table-success table-striped">
            <thead>
                <tr style="text-align: center">
                    <th scope="col">#</th>
                    <th scope="col">Title</th>
                    <th scope="col">Review Type</th>
                    <th scope="col">Author Score</th>
                    <th scope="col">Create Date</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody style="text-align: center; ">
                @for (var i = 0; i < Model.Models.Count; i++)
                {
                    <tr>
                        <th scope="row">@((Model.CurrentPage - 1) * 10 + 1 + i)</th>
                        <td>
                            <button type="button" class="btn btn-link" data-bs-toggle="modal" data-bs-target="#staticBackdrop@(i)">
                                @Model.Models[i].Title
                            </button>
                            <div class="modal fade" id="staticBackdrop@(i)" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="staticBackdropLabel">@Model.Models[i].Title</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
                                        </div>
                                        <div class="modal-body">
                                            @Model.Models[i].Content
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td>@Model.Models[i].ReviewType</td>
                        <td>@Model.Models[i].AuthorScore</td>
                        <td>@Model.Models[i].CreateDate</td>
                        <td>
                            <div class="list-group list-group-horizontal" style="display: flex; justify-content: center;">
                                <a asp-action="UpdateReview" asp-controller="Reviews" asp-route-reviewId="@Model.Models[i].ReviewId" class="list-group-item btn-sm">Update</a>
                                <form asp-action="RemoveReview" asp-controller="Reviews" asp-route-reviewId="@Model.Models[i].ReviewId" asp-route-email="@User.FindFirstValue(ClaimTypes.Email)">
                                    <button type="submit" class="list-group-item btn-sm">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    }
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            @if (Model.CurrentPage == 1)
            {
                <li class="page-item disabled">
                    <a class="page-link" asp-action="GetUserReviews" asp-controller="reviews"
                       asp-route-currentPage="@(Model.CurrentPage - 1)" aria-disabled="true" asp-route-email="@User.FindFirstValue(ClaimTypes.Email)">Previous</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" asp-action="GetUserReviews" asp-controller="reviews"
                       asp-route-currentPage="@(Model.CurrentPage - 1)" aria-disabled="true" asp-route-email="@User.FindFirstValue(ClaimTypes.Email)">Previous</a>
                </li>
            }
            @for (int i = 0; i < Model.CountOfPages; i++)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="GetUserReviews" asp-controller="reviews"
                       asp-route-currentPage="@(i + 1)" asp-route-email="@User.FindFirstValue(ClaimTypes.Email)">@(i + 1)</a>
                </li>
            }
            @if (Model.CurrentPage == Model.CountOfPages || Model.CountOfPages == 1)
            {
                <li class="page-item disabled">
                    <a class="page-link" asp-action="GetUserReviews" asp-controller="reviews"
                       asp-route-currentPage="@(Model.CurrentPage + 1)" asp-route-email="@User.FindFirstValue(ClaimTypes.Email)">Next</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" asp-action="GetUserReviews" asp-controller="reviews"
                       asp-route-currentPage="@(Model.CurrentPage + 1)" asp-route-email="@User.FindFirstValue(ClaimTypes.Email)">Next</a>
                </li>
            }
        </ul>
    </nav>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
    <script type="text/javascript" src="@Url.Content("~/js/bootstrap.bundle.min.js")"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>

