@model RegistrationUserModel
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Registration.css" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <title>Registration</title>
</head>

<body>
    <main>
        <div class="circle"></div>
        <div class="register-form-container">
            <form asp-controller="users" asp-action="registration" method="POST">
                <h1 class="form-title">
                    Registration
                </h1>
                <div class="form-fields">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-field">
                        <input type="email" asp-for="Email" placeholder="Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-field">
                        <input type="password" asp-for="Password" placeholder="Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-field">
                        <input type="password" asp-for="PasswordConfirm" placeholder="Confirm Password">
                        <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                    </div>
                    <div class="form-field">
                        <input type="text" asp-for="FName" placeholder="FName">
                        <span asp-validation-for="FName" class="text-danger"></span>
                    </div>
                    <div class="form-field">
                        <input type="text" asp-for="LName" placeholder="FName">
                        <span asp-validation-for="LName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-buttons">
                    <button class="button" type ="submit">Registration</button>
                </div>
                <div>
                    <a href='@Url.Action("Authentication", "Users")'>Have an account? Login</a>
                </div>
            </form>
        </div>
    </main>
</body>
</html>
